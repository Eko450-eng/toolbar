{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "toolbar",
	"version": "0.0.3",
	"identifier": "de.wipdesign.toolbar",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "toolbar",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
	  "targets": [
        "deb",
        "nsis"
      ],
      "nsis": {
        "oneClick": false,
        "perMachine": false, // Ensures installation is per-user
        "allowElevation": false, // Prevents the installer from requesting admin privileges
        "installerIcon": null,
        "license": null,
        "warningsAsErrors": false,
        "include": null,
        "installMode": "user" // Install in the user's directory
      },
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
